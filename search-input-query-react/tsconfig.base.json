{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["es2018", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "types": ["jest", "node", "@testing-library/jest-dom"],
    "jsx": "react",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.test.ts",
    "./src/**/*.test.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}